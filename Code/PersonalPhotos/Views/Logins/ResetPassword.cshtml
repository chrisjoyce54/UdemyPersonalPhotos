@model PersonalPhotos.Controllers.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password</h2>
<div classs="container">
    <div class="row">
        <div class="col-lg-10">
            @Html.ValidationSummary();
        </div>
        <div class="col-md-10">
            <form method="post" asp-controller="Logins" asp-action="ResetPassword">
                <div class="form-group">
                    <label for="email" asp-for="EmailAddress">Email Address:</label>
                    <input type="text" id="email" asp-for="EmailAddress"/>
                </div>
                <input type="submit" value="Submit"/>
            </form>
        </div>
    </div>
</div>


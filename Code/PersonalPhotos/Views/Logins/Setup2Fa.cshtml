@model PersonalPhotos.Models.MfaCreateViewModel
@{
    ViewData["Title"] = "Setup 2Fa";
}

<h2>Setup 2Fa</h2>
<div classs="container">
    <div class="row">
        <div class="panel panel-info">
            <div class="panel-heading">
                Set up 2Fa @Model.AuthKey
            </div>
            <div class="panel-body">
                @Html.ValidationSummary()
                <form method="post" asp-action="Setup2Fa" asp-controller="Logins">
                    <div>
                        <label for="MfaCode">Enter Code</label>
                        <input type="text" id="MfaCode" asp-for="Code" class="form-control"/>
                    </div>
                    <br/>
                    <input type="submit" value="Complete Setup!" class="btn btn-primary"/>
                </form>
            </div>
         </div>
    </div>
</div>


